<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:title="@string/pref_hostname"
        android:summary="@string/pref_hostname_summary"
        android:defaultValue="192.168.0.1"
        android:key="prefHost"/>
    <EditTextPreference
        android:title="@string/pref_user_name"
        android:summary="@string/pref_user_name_summary"
        android:defaultValue=""
        android:key="prefUsername"/>
    <EditTextPreference
        android:title="@string/pref_password"
        android:summary="@string/pref_password_summary"
        android:defaultValue=""
        android:key="prefPassword"/>
</PreferenceScreen>